extends ./layout
block content
  article
    form(action='/topic/'+selected_topic.id+'/edit' method='post')
      p
        input(type='text' name='title' value=selected_topic.title placeholder='title')
      p
        textarea(name='description' placeholder='description')
          =selected_topic.description
      p
        input(type='text' name='author' value=selected_topic.author placeholder='author')
      p
        input(type='submit' value='SAVE')
